// this file compiles the Angular part
{
  "compileOnSave": false,
  "compilerOptions": {
     /* Basic Options */
    "incremental": true,
    "tsBuildInfoFile": "./",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "importHelpers": true,
    //"noEmitOnError": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    //"strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Experimental Options */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
